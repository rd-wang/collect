<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >

    <ImageView
        android:contentDescription="DEL"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:src="@drawable/logo"
        />

    <com.master.app.weight.CustomTextView
        android:id="@+id/ev_imei"
        app:textLeftBottomRadius="8dp"
        app:textLeftTopRadius="8dp"
        app:textRightTopRadius="8dp"
        app:textRightBottomRadius="8dp"
        android:layout_width="236dp"
        android:layout_height="39dp"
        android:layout_marginTop="48dp"
        android:textSize="13sp"
        android:gravity="center|center_horizontal"
        android:textColorHint="@color/light_gray"
        app:textStrokeColor="@color/white"
        app:textStrokeWidth="1dp"
        />

    <com.master.app.weight.CustomEditView
        android:id="@+id/dw_name"
        app:textLeftBottomRadius="8dp"
        app:textLeftTopRadius="8dp"
        app:textRightTopRadius="8dp"
        app:textRightBottomRadius="8dp"
        android:textColorHint="@color/light_gray"
        android:layout_width="236dp"
        android:layout_height="39dp"
        android:layout_marginTop="15dp"
        android:textSize="13sp"
        android:hint="输入单位名称"
        android:lines="1"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:textColor="@color/white"
        android:gravity="center|center_vertical"
        app:textStrokeColor="@color/white"
        app:textStrokeWidth="1dp"
        />

    <LinearLayout
        android:gravity="center_horizontal|center_vertical"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        >

        <com.master.app.weight.CustomEditView
            app:textLeftBottomRadius="8dp"
            app:textLeftTopRadius="8dp"
            app:textRightTopRadius="8dp"
            app:textRightBottomRadius="8dp"
            android:textColorHint="@color/light_gray"
            app:textStrokeColor="@color/white"
            app:textStrokeWidth="1dp"
            android:layout_width="133dp"
            android:layout_height="39dp"
            android:textSize="13sp"
            android:lines="1"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:hint="请输入验证码"
            android:gravity="center|center_vertical"
            />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/send_email"
            android:background="@drawable/button_press1"
            android:textColorHint="#fff"
            android:layout_width="96dp"
            android:layout_height="39dp"
            android:textSize="11sp"
            android:hint="获取验证码"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            />

    </LinearLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_submit"
        android:layout_width="236dp"
        android:layout_height="39dp"
        android:layout_marginTop="45dp"
        android:text="立即登陆"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:background="@drawable/login_button_no_stroke"
        />
</LinearLayout>
