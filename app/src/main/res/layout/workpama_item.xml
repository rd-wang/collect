<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:background="@color/white"
    >


    <TextView
        android:id="@id/tv_name"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_weight="1"
        style="@style/text_color_style"
        />

    <View
        style="@style/line_style"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        />

    <LinearLayout
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/bt_details"
            android:elevation="8dp"
            style="@style/text_color_style"
            android:drawablePadding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/xiangqing"
            android:gravity="center"
            android:text="详情"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            />

        <TextView
            android:id="@+id/cb_orientation"
            android:elevation="8dp"
            android:drawablePadding="4dp"
            style="@style/text_color_style"
            android:layout_marginLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/dingwei"
            android:gravity="center"
            android:text="定位"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            />

        <TextView
            android:id="@+id/ctv_modif"
            android:elevation="8dp"
            android:backgroundTint="@color/black"
            android:backgroundTintMode="multiply"
            android:drawablePadding="4dp"
            style="@style/text_color_style"
            android:layout_marginLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/xiugai"
            android:gravity="center"
            android:text="修改"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            />
    </LinearLayout>
</LinearLayout>