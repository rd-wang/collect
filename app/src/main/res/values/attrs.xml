<?xml version="1.0" encoding="utf-8"?>
<resources>


    esources>
    <declare-styleable name="LabelView">
        <!-- 设置文字内容 -->
        <attr name="lv_text" format="string"/>
        <!-- 设置文字颜色,默认#ffffff -->
        <attr name="lv_text_color" format="color"/>
        <!-- 设置文字大小,默认11sp -->
        <attr name="lv_text_size" format="dimension"/>
        <!-- 设置文字是否支持加粗,默认true -->
        <attr name="lv_text_bold" format="boolean"/>
        <!-- 设置文字是否支持全部大写,默认true-->
        <attr name="lv_text_all_caps" format="boolean"/>
        <!-- 设置背景颜色,默认"#FF4081"-->
        <attr name="lv_background_color" format="color"/>
        <!-- 设置LabelView所在矩形最小宽高,默认mFillTriangle?35dp:50dp-->
        <attr name="lv_min_size" format="dimension"/>
        <!-- 设置文字上下padding,默认3.5dp,mFillTriangle为true时无效-->
        <attr name="lv_padding" format="dimension"/>
        <!-- 设置LabelView方向 -->
        <attr name="lv_gravity" format="enum">
            <enum name="TOP_LEFT" value="51"/>
            <enum name="TOP_RIGHT" value="53"/>
            <enum name="BOTTOM_LEFT" value="83"/>
            <enum name="BOTTOM_RIGHT" value="85"/>
        </attr>
        <!-- 设置是否填充三角区域,默认false -->
        <attr name="lv_fill_triangle" format="boolean"/>
        <!-- 设置是否浮嵌显示大小 -->
        <attr name="lv_fill_size" format="integer"/>
    </declare-styleable>



    <!--AdvancedPagerSlidingTabStrip_ 首页选项卡-->
    <declare-styleable name="AdvancedPagerSlidingTabStrip">
        <attr name="apTabIndicatorColor" format="color" />
        <attr name="apTabUnderlineColor" format="color" />
        <attr name="apTabDividerColor" format="color" />
        <attr name="apTabTextSelectColor" format="color" />
        <attr name="apTabIndicatorHeight" format="dimension" />
        <attr name="apTabUnderlineHeight" format="dimension" />
        <attr name="apTabDividerPadding" format="dimension" />
        <attr name="apTabPaddingLeftRight" format="dimension" />
        <attr name="apTabPaddingTopBottom" format="dimension" />
        <attr name="apTabScrollOffset" format="dimension" />
        <attr name="apTabBackground" format="reference" />
        <attr name="apTabShouldExpand" format="boolean" />
        <attr name="apTabTextAllCaps" format="boolean" />
        <attr name="apTabDrawMode" format="enum">
            <enum name="normal" value="0" />
            <enum name="text" value="1" />
        </attr>
    </declare-styleable>


    <declare-styleable name="IconEditText">
        <attr name="iconSrc" format="reference" />
        <attr name="isPassword" format="boolean" />
        <attr name="hint" format="string" />
    </declare-styleable>

    <declare-styleable name="lableGride">
        <attr name="datas" format="reference" />
    </declare-styleable>


    <declare-styleable name="customTextView">
        <attr name="textSolidColor" format="color" />
        <attr name="textStrokeColor" format="color" />
        <attr name="textRadius" format="dimension" />
        <attr name="textLeftTopRadius" format="dimension" />
        <attr name="textLeftBottomRadius" format="dimension" />
        <attr name="textRightTopRadius" format="dimension" />
        <attr name="textRightBottomRadius" format="dimension" />
        <attr name="textStrokeWidth" format="dimension" />
        <attr name="textDrawable" format="reference" />
        <attr name="textNormalTextColor" format="color" />
        <attr name="textSelectedTextColor" format="color" />
    </declare-styleable>
</resources>